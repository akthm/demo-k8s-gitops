{
  "title": "MokhaBack - Secrets & Rotation Monitoring (Working)",
  "uid": "mokhaback-secrets-working",
  "tags": [
    "mokhaback",
    "security",
    "rotation",
    "secrets"
  ],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "External Secrets - Total Syncs",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(externalsecret_sync_calls_total{namespace=\"backend\"})",
          "legendFormat": "Total Syncs"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "External Secrets - Ready",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "count(externalsecret_status_condition{namespace=\"backend\", condition=\"Ready\", status=\"True\"})",
          "legendFormat": "Ready Secrets"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 4, "color": "yellow"},
              {"value": 5, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "External Secrets - Sync Errors (1h)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(increase(externalsecret_sync_calls_error{namespace=\"backend\"}[1h]))",
          "legendFormat": "Errors"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "JWT Tokens Issued/min",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "rate(mokhaback_jwt_tokens_issued_total[5m]) * 60",
          "legendFormat": "Tokens/min"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 1
        }
      }
    },
    {
      "id": 5,
      "title": "External Secrets Sync Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "rate(externalsecret_sync_calls_total{namespace=\"backend\"}[5m])",
          "legendFormat": "{{name}}"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Syncs/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 6,
      "title": "External Secrets Status by Name",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "externalsecret_status_condition{namespace=\"backend\", condition=\"Ready\"}",
          "legendFormat": "{{name}} - {{status}}"
        }
      ],
      "yaxes": [
        {"format": "short"},
        {"format": "short"}
      ]
    },
    {
      "id": 7,
      "title": "Application Metrics - HTTP Requests",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "rate(mokhaback_http_requests_by_endpoint_total[5m])",
          "legendFormat": "{{endpoint}} - {{method}} - {{status}}"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 8,
      "title": "Application Errors",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "targets": [
        {
          "expr": "rate(mokhaback_application_errors_total[5m])",
          "legendFormat": "{{type}}"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Errors/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 9,
      "title": "Database Operations",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
      "targets": [
        {
          "expr": "rate(mokhaback_db_operations_total[5m])",
          "legendFormat": "{{operation}} - {{status}}"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Operations/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 10,
      "title": "Active Users",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
      "targets": [
        {
          "expr": "mokhaback_active_users",
          "legendFormat": "Active Users"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Users"},
        {"format": "short"}
      ]
    },
    {
      "id": 11,
      "title": "External Secrets - Detailed Status",
      "type": "table",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 30},
      "targets": [
        {
          "expr": "externalsecret_status_condition{namespace=\"backend\"}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "container": true,
              "endpoint": true,
              "instance": true,
              "job": true,
              "pod": true,
              "service": true
            },
            "indexByName": {},
            "renameByName": {}
          }
        }
      ],
      "options": {
        "showHeader": true
      }
    }
  ]
}
