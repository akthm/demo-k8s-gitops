{
  "title": "MokhaBack - Secrets & Rotation Monitoring (Working)",
  "uid": "mokhaback-secrets-working",
  "tags": [
    "mokhaback",
    "security",
    "rotation",
    "secrets"
  ],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Secrets in Backend Namespace",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "count(kube_secret_info{namespace=\"backend\"})",
          "legendFormat": "Total Secrets"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 5, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Pods Running in Backend",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{namespace=\"backend\", phase=\"Running\"})",
          "legendFormat": "Running Pods"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 2, "color": "yellow"},
              {"value": 3, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Container Restarts (24h)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"backend\"}[24h]))",
          "legendFormat": "Restarts"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Appointments Booked",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "mokhaback_appointments_booked_total",
          "legendFormat": "Total Booked"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 5,
      "title": "Secrets Status - Should Always Be Ready",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "count(kube_secret_info{namespace=\"backend\"})",
          "legendFormat": "Total Secrets in Backend"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Count"},
        {"format": "short"}
      ]
    },
    {
      "id": 6,
      "title": "SMS Queue Depth",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "mokhaback_sms_queue_depth",
          "legendFormat": "SMS Queue"
        }
      ],
      "yaxes": [
        {"format": "short"},
        {"format": "short"}
      ]
    },
    {
      "id": 7,
      "title": "Appointments - Slot Checks",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "mokhaback_appointments_slots_checked_total",
          "legendFormat": "Slot Checks"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Total Checks"},
        {"format": "short"}
      ]
    },
    {
      "id": 8,
      "title": "Appointments - Bookings Over Time",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "targets": [
        {
          "expr": "mokhaback_appointments_booked_total",
          "legendFormat": "Total Bookings"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Bookings"},
        {"format": "short"}
      ]
    },
    {
      "id": 9,
      "title": "Pod Status - Backend Namespace",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
      "targets": [
        {
          "expr": "kube_pod_status_phase{namespace=\"backend\"}",
          "legendFormat": "{{pod}} - {{phase}}"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Status"},
        {"format": "short"}
      ]
    },
    {
      "id": 10,
      "title": "Container Restarts - Backend",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
      "targets": [
        {
          "expr": "kube_pod_container_status_restarts_total{namespace=\"backend\"}",
          "legendFormat": "{{pod}} - {{container}}"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Restarts"},
        {"format": "short"}
      ]
    },
    {
      "id": 11,
      "title": "Secrets in Backend Namespace",
      "type": "table",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 30},
      "targets": [
        {
          "expr": "kube_secret_info{namespace=\"backend\"}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "container": true,
              "endpoint": true,
              "instance": true,
              "job": true,
              "pod": true,
              "service": true,
              "uid": true
            }
          }
        }
      ],
      "options": {
        "showHeader": true
      }
    }
  ]
}
