{
  "title": "MokhaBack - Secrets & Rotation Monitoring",
  "uid": "mokhaback-secrets-rotation",
  "tags": [
    "mokhaback",
    "security",
    "rotation",
    "secrets"
  ],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "JWT Key Age",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "(time() - mokhaback_jwt_key_rotation_timestamp_seconds) / 86400",
          "legendFormat": "Days since last rotation",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "days",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 60,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "DB Encryption Key Age",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "(time() - mokhaback_db_encryption_key_rotation_timestamp_seconds) / 86400",
          "legendFormat": "Days since last rotation",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "days",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 120,
                "color": "yellow"
              },
              {
                "value": 180,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "JWT Validation Errors (5m rate)",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(mokhaback_jwt_validation_errors_total[5m]) * 100",
          "legendFormat": "Error rate",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 0.1,
                "color": "yellow"
              },
              {
                "value": 1,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Secret File Read Errors",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "increase(mokhaback_secret_file_read_errors_total[5m])",
          "legendFormat": "Errors (5m)",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "JWT Rotation History",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "expr": "mokhaback_jwt_key_rotation_timestamp_seconds",
          "legendFormat": "Last JWT rotation",
          "refId": "A"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "yaxis": {
        "format": "dateTimeAsIso"
      },
      "lines": true,
      "points": true,
      "pointradius": 5
    },
    {
      "id": 6,
      "title": "DB Encryption Key Rotation History",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "targets": [
        {
          "expr": "mokhaback_db_encryption_key_rotation_timestamp_seconds",
          "legendFormat": "Last DB key rotation - {{version}}",
          "refId": "A"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "yaxis": {
        "format": "dateTimeAsIso"
      },
      "lines": true,
      "points": true,
      "pointradius": 5
    },
    {
      "id": 7,
      "title": "DB Encryption Key Version Distribution",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 14
      },
      "targets": [
        {
          "expr": "sum by (table, field, version) (mokhaback_db_encryption_key_version_distribution)",
          "legendFormat": "{{table}}.{{field}} - {{version}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        }
      }
    },
    {
      "id": 8,
      "title": "Encryption Operation Duration (p95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(mokhaback_encryption_operation_duration_seconds_bucket[5m]))",
          "legendFormat": "{{operation}} - {{version}}",
          "refId": "A"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "yaxis": {
        "format": "s",
        "logBase": 1
      },
      "lines": true,
      "fill": 1,
      "linewidth": 2
    },
    {
      "id": 9,
      "title": "Rotation Job Status",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 22
      },
      "targets": [
        {
          "expr": "kube_job_status_succeeded{job_name=~\".*-rotation.*|.*-reencrypt.*\"}",
          "legendFormat": "",
          "refId": "A",
          "format": "table",
          "instant": true
        },
        {
          "expr": "kube_job_status_failed{job_name=~\".*-rotation.*|.*-reencrypt.*\"}",
          "legendFormat": "",
          "refId": "B",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Time",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Value #A"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Succeeded"
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Value #B"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Failed"
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              }
            ]
          }
        ]
      }
    },
    {
      "id": 10,
      "title": "External Secrets Sync Status",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 0,
        "y": 30
      },
      "targets": [
        {
          "expr": "sum(external_secrets_sync_calls_total{status=\"success\"})",
          "legendFormat": "Successful syncs",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "title": "External Secrets Sync Errors",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 8,
        "y": 30
      },
      "targets": [
        {
          "expr": "sum(external_secrets_sync_calls_error)",
          "legendFormat": "Sync errors",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Pod Restart Count (24h)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 16,
        "y": 30
      },
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_restarts_total{pod=~\"flask-app.*\"}[24h]))",
          "legendFormat": "Restarts",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 5,
                "color": "yellow"
              },
              {
                "value": 10,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 13,
      "title": "External Secrets Ready Status",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 34
      },
      "targets": [
        {
          "expr": "externalsecret_status_condition{namespace=\"backend\"}",
          "legendFormat": "",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "job": true,
              "namespace": true,
              "__name__": true
            },
            "indexByName": {
              "name": 0,
              "condition": 1,
              "status": 2,
              "Value": 3
            },
            "renameByName": {
              "name": "External Secret",
              "condition": "Condition",
              "status": "Status",
              "Value": "State"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "External Secret",
            "desc": false
          }
        ]
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "State"
            },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "value": 0,
                      "color": "red"
                    },
                    {
                      "value": 1,
                      "color": "green"
                    }
                  ]
                }
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "0": {
                        "text": "Not Ready"
                      },
                      "1": {
                        "text": "Ready"
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "id": 14,
      "title": "External Secrets Sync Calls",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 34
      },
      "targets": [
        {
          "expr": "rate(external_secrets_sync_calls_total{namespace=\"backend\"}[5m])",
          "legendFormat": "{{name}} - {{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "calcs": [
            "mean",
            "lastNotNull"
          ],
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "syncs/sec",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "insertNulls": false,
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          },
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 15,
      "title": "DB Encryption Key Version Distribution - Detailed",
      "type": "table",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 42
      },
      "targets": [
        {
          "expr": "mokhaback_db_encryption_key_version_distribution",
          "legendFormat": "",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "job": true,
              "namespace": true,
              "__name__": true,
              "pod": true,
              "service": true,
              "container": true,
              "endpoint": true,
              "instance": true
            },
            "indexByName": {
              "table": 0,
              "field": 1,
              "version": 2,
              "Value": 3
            },
            "renameByName": {
              "table": "Table",
              "field": "Field",
              "version": "Key Version",
              "Value": "Record Count"
            }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [
              {
                "field": "Record Count",
                "desc": true
              }
            ]
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": []
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Record Count"
            },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              },
              {
                "id": "color",
                "value": {
                  "mode": "continuous-GrYlRd"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Key Version"
            },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "current": {
                        "color": "green",
                        "index": 0
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "id": 16,
      "title": "External Secrets Sync Errors (Last 1h)",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 52
      },
      "targets": [
        {
          "expr": "sum(increase(external_secrets_sync_calls_error{namespace=\"backend\"}[1h]))",
          "legendFormat": "Total Errors",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 17,
      "title": "Records Using Old Encryption Keys",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 52
      },
      "targets": [
        {
          "expr": "sum(mokhaback_db_encryption_key_version_distribution{version!=\"current\"})",
          "legendFormat": "Old Key Records",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 100,
                "color": "yellow"
              },
              {
                "value": 1000,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 18,
      "title": "Active Encryption Key Versions",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 52
      },
      "targets": [
        {
          "expr": "count(count by (version) (mokhaback_db_encryption_key_version_distribution > 0))",
          "legendFormat": "Total Versions",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 3,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "orange"
              }
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(mokhaback_jwt_key_rotation_timestamp_seconds, namespace)",
        "current": {
          "text": "backend",
          "value": "backend"
        },
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "refresh": 1
      },
      {
        "name": "environment",
        "type": "query",
        "query": "label_values(mokhaback_jwt_key_rotation_timestamp_seconds{namespace=\"$namespace\"}, environment)",
        "current": {
          "text": "staging",
          "value": "staging"
        },
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "refresh": 1
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "JWT Rotations",
        "datasource": "Prometheus",
        "enable": true,
        "expr": "changes(mokhaback_jwt_key_rotation_timestamp_seconds[1m]) > 0",
        "iconColor": "blue",
        "tagKeys": "rotation_type,version"
      },
      {
        "name": "DB Key Rotations",
        "datasource": "Prometheus",
        "enable": true,
        "expr": "changes(mokhaback_db_encryption_key_rotation_timestamp_seconds[1m]) > 0",
        "iconColor": "purple",
        "tagKeys": "rotation_type,version"
      }
    ]
  }
}
