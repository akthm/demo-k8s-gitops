{
  "title": "Secrets & External Secrets Monitoring",
  "uid": "secrets-monitoring-final",
  "tags": ["secrets", "security", "external-secrets"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Secrets in Backend Namespace",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "count(count by (secret) (kube_secret_info{namespace=\"backend\"}))",
          "legendFormat": "Total Secrets",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 5, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Pods Running - Backend",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "count(kube_pod_info{namespace=\"backend\"})",
          "legendFormat": "Running Pods",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 2, "color": "yellow"},
              {"value": 3, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Container Restarts (24h)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(changes(kube_pod_container_status_restarts_total{namespace=\"backend\"}[24h]))",
          "legendFormat": "Restarts",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Appointments Booked",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "mokhaback_appointments_booked_total",
          "legendFormat": "Total",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 5,
      "title": "Backend Pods Status",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "count by (pod) (kube_pod_info{namespace=\"backend\"})",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 6,
      "title": "SMS Queue Depth",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "mokhaback_sms_queue_depth",
          "legendFormat": "Queue Depth",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Appointment Slot Checks",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "mokhaback_appointments_slots_checked_total",
          "legendFormat": "Checks",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Container Restarts Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "targets": [
        {
          "expr": "kube_pod_container_status_restarts_total{namespace=\"backend\"}",
          "legendFormat": "{{pod}} - {{container}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "stepAfter"
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Backend Namespace Secrets",
      "type": "table",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 22},
      "targets": [
        {
          "expr": "kube_secret_info{namespace=\"backend\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "container": true,
              "endpoint": true,
              "instance": true,
              "job": true,
              "pod": true,
              "service": true,
              "uid": true
            },
            "indexByName": {},
            "renameByName": {
              "secret": "Secret Name",
              "namespace": "Namespace"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": []
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
